# Server
PORT=3001

# Postgres (host port is used by docker-compose.yaml)
POSTGRES_USER=steam
POSTGRES_PASSWORD=steam
POSTGRES_DB=steam_analytics
POSTGRES_PORT=5433

# Used when running the API outside docker compose.
# In docker compose, DATABASE_URL is set explicitly in docker-compose.yaml.
DATABASE_URL=postgresql://steam:steam@localhost:5433/steam_analytics

# Steam
STEAM_API_KEY=steamkey_change
STEAM_STEAMID64=steamid64_change

# Poller
ENABLE_POLLER=false
POLL_INTERVAL_SECONDS=60
STEAM_MAX_GAMES=0
MAX_NEW_EVENTS_RETURNED=50

# Debug routes (registers /debug/* endpoints)
ENABLE_DEBUG_ROUTES=true
